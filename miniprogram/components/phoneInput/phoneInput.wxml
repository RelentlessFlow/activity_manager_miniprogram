<view class="custom">
  <block wx:if="{{inputFucused}}">
    <view class="lable-group">
      <view class="lable-group-item lable">手机号</view>
    </view>
  </block>
  <div class="input-container">
    <input class="input" placeholder="{{inputFucused ? '' : '手机号'}}" maxlength="21" confirm-type="next"
      password="{{showPass}}" type="number"
      value="{{account}}" bindinput="handleInput" bindfocus="handleFocus" bindblur="handleBlur"
    />
  </div>
</view>