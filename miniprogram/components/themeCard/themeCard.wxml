<wxs module="tools" src="../../utils/tools.wxs"></wxs>
<view class="theme-card" bindtap="handleTap">
  <view class="theme-card-img">
    <image src="{{theme.cover}}" />
  </view>
  <view class="theme-card-content">
    <view class="theme-card-content-title">{{theme.name}}</view>
    <view class="theme-card-content-time">{{tools.formatTime(theme.startTime)}} è‡³ {{tools.formatTime(theme.endTime)}}</view>
    <view class="theme-card-content-count text-overflow-hidden-two">{{theme.desc}}</view>
  </view>
</view>