<swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000">
  <block wx:for="{{imgs}}" wx:key="url">
    <swiper-item class="item" data-id="{{item.id}}" data-index="{{index}}" data-item="{{item}}" bindtap="handleItemTap">
      <image class="img" src="{{item.img}}" mode="widthFix"></image>
    </swiper-item>
  </block>
</swiper>