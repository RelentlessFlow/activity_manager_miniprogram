<view class="activity-list">
  <block wx:for="{{activities}}" wx:key="id">
    <view class="activity-list-item">
      <view class="activity-list-item-cover">
        <image src="{{item.cover}}"></image>
      </view>
      <view class="activity-list-item-time">{{item.date.start}} è‡³ {{item.date.end}}</view>
      <view class="activity-list-item-name">{{item.name}}</view>
      <view class="activity-list-item-type">{{item.type}}</view>
    </view>
  </block>
</view>